<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrito</title>
  </head>
  <body>
    <h1>Detalle del Carrito</h1>

    {{#if cart}}
      <h2>Productos en el Carrito</h2>
      <ul>
        {{#each cart.products}}
          <li>
            <p><strong>Producto:</strong>
              {{this.product.title}}</p>
            <p><strong>Precio:</strong>
              ${{this.product.price}}</p>
            <p><strong>Cantidad:</strong>
              {{this.quantity}}</p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>Carrito no encontrado</p>
    {{/if}}
  </body>
</html>